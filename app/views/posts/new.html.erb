<h2 class="text-center">新增文章</h2>
<div class="col-md-4 col-md-offset-4">    
    <%= simple_form_for [@group,@post] do |f| %>
        <div class="form-group">
            <%= f.input :content,input_html: { class: "form-control" } %>
        </div>
        <div class="form-actions">
            <%= f.submit "送出" , disable_with: "送出....",class: "btn btn-primary" %>
        </div>
    
    <% end %>    
    <%= link_to("Back To Posts " + @group.title, group_path(@group.id) ,  class: "btn btn-primary pull-right")%> 
</div>